@model IEnumerable<Library.Models.RentModel>

@{
    ViewData["Title"] = "Lista wypożyczonych książek";
}

<h1>Wypożyczone książki</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tytuł)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorNameConcatenation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientNameConcatenation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortRentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortReturnDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tytuł)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorNameConcatenation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientNameConcatenation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortRentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortReturnDate)
            </td>
            <td>
                @if(item.Data_zwrotu == null) { 
                    <a asp-action="Return" asp-route-id="@item.ID">Przeprowadź zwrot</a>
                }    
            </td>
        </tr>
}
    </tbody>
</table>
