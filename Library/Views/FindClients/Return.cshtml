@model Library.Models.RentModel

@{
    ViewData["Title"] = "Zwrot książki";
}

<h1>Przyjmowanie zwrotu książki</h1>

<h3>Zaakceptować zwrot?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tytuł)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tytuł)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorNameConcatenation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorNameConcatenation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientNameConcatenation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientNameConcatenation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortRentDate)
        </dt>
        <dd class="col-sm-10">
