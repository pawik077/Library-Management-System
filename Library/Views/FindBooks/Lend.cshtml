}

<h1>Nowe wypożyczenie</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Tytuł)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.book.Tytuł)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Imię_Autora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.book.Imię_Autora)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Nazwisko_Autora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.book.Nazwisko_Autora)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Nazwa_Gatunku)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.book.Nazwa_Gatunku)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Stan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.book.Stan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Dostępność)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.book.Dostępność)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Opis)
